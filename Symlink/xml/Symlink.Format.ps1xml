											"MissingVariable"
											{
												return "`e[33;4m$name`e[0m❗"
											}
										}
										
									}
									"NotExists"
									{
										return "`e[33m$name✅`e[0m"
									}
									"NeedsCreation"
									{
										return "`e[31;21m$name`e[0m❗"
									}
									"NeedsDeletion"
									{
										return "`e[33;21m$name`e[0m❗"
									}
									"Error"
									{
										return "`e[31;21mERROR`e[0m❗"
									}
								}
							</ScriptBlock>
						</WideItem>
					</WideEntry>
					
				</WideEntries>
			</WideControl>
		</View>
		
	</ViewDefinitions>
	
</Configuration>
