						</WideItem>
					</WideEntry>
					
					<!-- FANCY Formatting -->
					<WideEntry>
						<EntrySelectedBy>
							<SelectionCondition>
								<SelectionSetName>Set.Symlink</SelectionSetName>
								<ScriptBlock>
									if ($env:WT_SESSION) {
										return $true
									}
								</ScriptBlock>
							</SelectionCondition>
						</EntrySelectedBy>
						
						<!-- The symlink name. -->
						<WideItem>
							<ScriptBlock>
								$name = $_.Name
								$obj = $_
								switch ($obj.GetState())
								{
									"Exists"
									{
										switch ($obj.TargetState())
										{
											"Valid"
											{
												return "`e[32m$name✅`e[0m"
											}
											"Invalid"
											{
												return "`e[33;4m$name`e[0m❗"
